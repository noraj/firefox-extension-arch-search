{
  "manifest_version": 2,
  "name": "ArchLinux Wiki Search",
  "short_name": "archlinux_search_wiki",
  "description": "Adds ArchLinux Wiki as a search engine.",
  "version": "1.0.1",
  "icons": {
    "16": "icons/arch.svg",
    "64": "icons/arch.svg",
    "256": "icons/arch.svg"
  },
  "chrome_settings_overrides": {
    "search_provider": {
      "name": "ArchLinux Wiki",
      "keyword": "alwiki",
      "favicon_url": "https://wiki.archlinux.org/favicon.ico",
      "search_url": "https://wiki.archlinux.org/index.php?search={searchTerms}"
    }
  },
  "browser_specific_settings": {
    "gecko": {
        "id": "ArchWiki@archlinux.org",
        "strict_min_version": "55.0"
    }
  },
  "author": "noraj",
  "homepage_url": "https://github.com/noraj/firefox-extension-arch-search"
}
